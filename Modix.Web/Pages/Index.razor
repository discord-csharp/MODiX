@page "/"
@using MudBlazor

<PageTitle>Modix - Home</PageTitle>

<MudContainer>
    <section class="container section">

        <MudText Typo="Typo.h6" Class="mb-6">
            Modix (stylized MODiX) is a general purpose Discord bot written for use on the
            <MudLink Typo="Typo.h6" Href="http://aka.ms/csharp-discord">C# Discord Server</MudLink>
            by
            <MudLink Typo="Typo.h6" Href="https://github.com/discord-csharp/MODiX/graphs/contributors">developers like you</MudLink>.
